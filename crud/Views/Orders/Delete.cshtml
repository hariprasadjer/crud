@model Order
@{
    ViewData["Title"] = "Delete Order";
}
<h1>Delete Order</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Order #@Model.OrderId</h4>
    <dl class="row">
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product?.Name</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="OrderId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
